<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="/css/body.css">
        <script src="https://kit.fontawesome.com/4b63f06b5f.js" crossorigin="anonymous"></script>

    </head>

    <body>
         <div id="head">
            
        <h1><i class="far fa-address-book"></i>&nbsp CONTACT LIST</h1>
           <p>create your own contact list</p>
          </div>


          <div id="form">
            <form method="post" action="/create">
                <label for="name">Enter Name:</label><br>
                <input type="text"  name="name" required><br>
                <label for="phone">Enter Phone Number:</label><br>
                <input type="text" name="phone" required>&nbsp &nbsp &nbsp
                <button type="submit" id="search"><i class="far fa-arrow-alt-circle-right"></i></i></button>
              </form>
              </div>

       
              <ul>
                
               <% for (i of contact_list){%> 
                    
                <li>
                    <div id="list">
                    <div><%=i.name %></div>
                    <div><%=i.phone %></div>
                    <div><a href="/delete-contact/?id=<%= i._id%>"><i class="fas fa-window-close" ></i></a></div>
                    </div>
               
                </li> 
                    <%} %>

                
              </ul>


         
    </body>


</html>